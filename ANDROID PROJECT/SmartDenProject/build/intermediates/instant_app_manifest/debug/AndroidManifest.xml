<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartden"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="29" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.smartden.FirstActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.smartden.Thermostat"
            android:parentActivityName="com.example.smartden.MainMenu" />
        <activity
            android:name="com.example.smartden.security"
            android:parentActivityName="com.example.smartden.MainMenu" />
        <activity
            android:name="com.example.smartden.lightsystem"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.smartden.MainMenu" />
        <activity
            android:name="com.example.smartden.garage"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.smartden.MainMenu" />
        <activity
            android:name="com.example.smartden.MainMenu"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.smartden.MainActivity" />
        <activity android:name="com.example.smartden.RegistrationActivity" />
        <activity android:name="com.example.smartden.MainActivity" >
        </activity>
    </application>

</manifest>